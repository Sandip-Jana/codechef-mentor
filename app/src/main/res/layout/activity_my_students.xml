<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".activities.Student.MyStudents">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_color"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:paddingTop="1dp"
        android:background="@drawable/my_student"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_color"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/studentTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabBackground="@color/dim_foreground_light_inverse"
        app:tabTextColor="#80000000"
        app:tabSelectedTextColor="@android:color/white"
        app:tabIndicatorColor="@color/colorPrimary"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_color"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/studentPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</LinearLayout>