<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".activities.nav.contest.fragments.ShowProblemsFragment">

    <TextView
        android:id="@+id/contestName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_large"
        android:textStyle="normal|bold"/>

    <TextView
        android:id="@+id/contestCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_large"
        android:textStyle="normal|bold"/>

    <ImageView
        android:id="@+id/bannerFile"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <ProgressBar
        android:id="@+id/progressBarProblems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/noDataTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_contest_data"
        android:textSize="@dimen/font_size_small"
        android:textStyle="normal"
        android:gravity="center_horizontal"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/problemsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>




</LinearLayout>